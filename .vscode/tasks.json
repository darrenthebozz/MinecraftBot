{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/sbin/g++",
            "args": [
                "-fdiagnostics-color=always",
                //"-g",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.out",
                "-lssl",
                "-lcrypto",
                "-lz",
                "-ljsoncpp",
                "-fno-stack-protector",
                "-fno-pie",
                "-no-pie",
                "-fno-exceptions",
                "-Ofast",
                "-DNDEBUG",
                "${workspaceFolder}/src/*.cpp",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}